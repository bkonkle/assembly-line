{
  "name": "<%= name %>",
  "version": "<%= version %>",
  "description": "<%- description %>",
  "main": "lib/index.js",
  "scripts": {
    "test": "istanbul test _mocha -- --require test/setup test/**/*.{js,jsx}",
    "build": "babel src -s -d lib",
    "watch": "babel src -s -d lib -w",
    "bundle": "babel-node $(which webpack) --display-modules"
  },
  "repository": {
    "type": "<%= repoType %>",
    "url": "<%= repoUrl %>"
  },
  "author": "<%- author %>",
  "license": "MIT",
  "keywords": [<% keywords.forEach((keyword, i) => { %>
    "<%= keyword %>"<% if (i !== keywords.length - 1) { %>,<% } %><% }) %>
  ],<% if (react) { %>
  "peerDependencies": {
    "react": ">=0.14.0"
  },<% } %>
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-eslint": "^4.1.5",
    "babel-plugin-transform-class-properties": "^6.2.2",
    "babel-plugin-transform-export-extensions": "^6.1.18",
    "babel-plugin-transform-object-rest-spread": "^6.1.18",
    "babel-preset-es2015-loose": "^6.1.2",<% if (react) { %>
    "babel-preset-react": "^6.1.18",<% } %>
    "babel-register": "^6.2.0",
    "chai": "^3.4.1",<% if (react) { %>
    "chai-enzyme": "^0.2.0",
    "enzyme": "^1.2.0",<% } %>
    "eslint": "^1.9.0",
    "eslint-config-ecliptic": "^1.3.0",<% if (react) { %>
    "eslint-plugin-react": "^3.11.1",<% } %>
    "istanbul": "^0.4.1",
    "mocha": "^2.3.3",
    "proxyquire": "^1.7.3",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.12.9"
  }
}
